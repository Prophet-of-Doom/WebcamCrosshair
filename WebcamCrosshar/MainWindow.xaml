<Window x:Class="WebcamCrosshar.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Image HorizontalAlignment="Center" Name="frameHolder"  VerticalAlignment="Center"  Stretch="Uniform" />
        <Canvas VerticalAlignment="Center" HorizontalAlignment="Center">
            <Line Y1="-200" Y2="200" Stroke="Black" StrokeThickness="4"></Line>
            <Line X1="-300" X2="300" Stroke="Black" StrokeThickness="4"></Line>
        </Canvas>
    </Grid>
</Window>
